<p style="color: green"><%= notice %></p>


<center>

  <h1>Hs Companies (<%= @hs_companies.size if @hs_companies %>)</h1>
  
  <%= form_tag(@hs_companies_path, method: :get) do %>
    <%= text_field_tag 'location', nil, placeholder: "Enter city, state or zip code"  %>
    <%= number_field_tag 'distance', nil, placeholder: "Enter distance"  %>
    <%= number_field_tag 'min_radius', nil, placeholder: "Min Radius"  %>
 
    <%= submit_tag 'Search', name: nil %>
  <% end %>

</center>

<br />
<br />

<div class="container-fluid">

  <table class="table table-striped table-hover table-sm">
    <thead>
    <tr>
      <% if params[:location] %>
        <th>Distance (miles)</th>
      <% end %>
      <th>Name</th>
      <th>Contacts</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>      
      <th>Zip code</th>
      <th>Primary identifier</th>     
      <th>HS Number</th>
      <th>Website</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hs_companies.each do |hs_company| %>
      <tr>
        <% if params[:location] %>
          <td><%= hs_company.distance_from(params[:location]).round(2) %></td>
        <% end %>
        <td><%= hs_company.name %></td>
        <td><%= hs_company.contacts %></td>
        <td><%= hs_company.address %></td>
        <td><%= hs_company.city %></td>
        <td><%= hs_company.state %></td>
        <td><%= hs_company.zip %></td>
        <td><%= hs_company.primary_identifier %></td>           
        <td><%= hs_company.hs_number %></td>
        <td><%= hs_company.website %></td>
        <td><%= hs_company.latitude %></td> 
        <td><%= hs_company.longitude %></td>       
       
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<br>



<%= link_to "New hs company", new_hs_company_path %>
