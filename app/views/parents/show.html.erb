<p style="color: green"><%= notice %></p>

<%= render @parent %>

<div>
  <%= link_to "Edit this parent", edit_parent_path(@parent) %> |
  <%= link_to "Back to parents", parents_path %>

  <%= button_to "Destroy this parent", @parent, method: :delete %>
</div>

<div class="container">
  <%= @parent.name %> <%= @parent.npi_companies.size %>
  <br />

</div>

<div class="container table-responsive">

  <table class="table table-striped table-hover table-sm">
    <thead>
      <tr>
        <th scope="col">Company</th>
        <th scope="col">NPI Number</th>       
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Position</th>
        <th scope="col">Address</th>   
        <th scope="col">City</th> 
        <th scope="col">State</th>                
      </tr>
    </thead>
    <tbody>
      <% @parent.npi_companies.limit(200).each do |c| %>
        <tr>
          <td><%= link_to c.name, c %></td>
          <td><%= c.number %></td>
          <td><%= c.first_name %></td>
          <td><%= c.last_name %></td>
          <td><%= c.position %></td>
          <td><%= c.address %></td>
          <td><%= c.city %></td>
          <td><%= c.state.iso if c.state %></td>
        </tr>
      <% end %>
      
    </tbody>
  </table>

<div/>
