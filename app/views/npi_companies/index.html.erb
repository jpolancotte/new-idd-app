<p style="color: green"><%= notice %></p>

<div class="container">

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Company</th>
        <th scope="col">Parent</th>       
        <th scope="col">NPI Number</th>       
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Position</th>
        <th scope="col">Phone</th>
        <th scope="col">Address</th>   
        <th scope="col">City</th> 
        <th scope="col">State</th> 
        <th scope="col">Postal</th>                 
      </tr>
    </thead>
    <tbody>
      <% @npi_companies.each do |c| %>
        <tr>
          <td><%= link_to c.name, c %></td> 
          <td><%= link_to c.parent.name, c.parent if c.parent %></td>         
          <td><%= c.number %></td>
          <td><%= c.first_name %></td>
          <td><%= c.last_name %></td>
          <td><%= c.position %></td>
          <td><%= c.telephone_number %></td>
          <td><%= c.address %></td>
          <td><%= c.city %></td>
          <td><%= c.state.iso if c.state %></td>
          <td><%= c.postal_code[0, 5] if c.postal_code %></td>
        </tr>
      <% end %>
      
    </tbody>
  </table>

<div/>



<%= link_to "New npi company", new_npi_company_path %>
