<p style="color: green"><%= notice %></p>

<h1>Organizations</h1>

<div id="organizations">
  <% @organizations.each do |organization| %>
    <%= render organization %>
    <p>
      <%= link_to "Show this organization", organization %>
    </p>
  <% end %>
</div>

<%= link_to "New organization", new_organization_path %>


<p style="color: green"><%= notice %></p>

<div class="container table-responsive">
  <h1>Organizations </h1>  
  Total <%= @organizations.size %> 
  <br />      
  <table class="table table-striped table-hover table-sm">
    <thead>
      <tr>        
        <th scope="col">Name</th>
        <th scope="col">Customer</th>
        <th scope="col">Locations</th>  
        <th scope="col">Website</th>     
      </tr>
    </thead>
    <tbody>
      <% @organizations.each do |org| %>       
                         
      <tr>       
        <td><%= link_to org.name, org %></td>
        <td><%= link_to org.customer %></td>
        <td><span class="badge bg-primary rounded-pill"><%= org.locations.size %></span></td>  
        <td><%= link_to org.website %></td>      
      </tr>       
      <% end %>     
    </tbody>
  </table>
</div>


<% link_to "New parent", new_parent_path %>
